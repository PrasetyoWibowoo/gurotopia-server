{
  "server": {
    "host": "0.0.0.0",
    "port": 17091,
    "max_players": 100,
    "name": "Gurotopia Server"
  },
  "database": {
    "type": "mysql",
    "host": "${MYSQL_HOST}",
    "port": 3306,
    "user":  "${MYSQL_USER}",
    "password": "${MYSQL_PASSWORD}",
    "database":  "${MYSQL_DATABASE}"
  },
  "admin": {
    "owners": ["YourGrowtopiaUsername"]
  },
  "security": {
    "bcrypt_rounds": 12
  },
  "logging":  {
    "level": "info",
    "output": "stdout"
  }
}
